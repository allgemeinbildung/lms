// FILE: firestore.rules (CORRECTED)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to READ assignments
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if false; // Protect assignments from being changed by students
    }

    // Allow a user to read and write to their OWN submission document
    // This path will be submissions/USER_ID/assignments/ASSIGNMENT_ID
    match /submissions/{userId}/{path=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow users to be created
    match /users/{userId} {
        allow read, write: if request.auth.uid == userId;
    }
  }
}